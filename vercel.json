{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "api/index.py"
      }
    ],
    "buildCommand": "pip install -r requirements.txt",
    "installCommand": "pip install -r requirements.txt && mkdir -p templates static",
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  }